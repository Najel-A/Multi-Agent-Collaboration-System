apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: eck-operator
  namespace: flux-system
spec:
  interval: 5m
  releaseName: eck-operator
  targetNamespace: elastic-system
  install:
    createNamespace: true
    remediation: { retries: 3 }
  upgrade:
    remediation: { retries: 3 }
  chart:
    spec:
      chart: eck-operator
      version: "3.0.0"
      sourceRef:
        kind: HelmRepository
        name: elastic
        namespace: flux-system
  values:
    installCRDs: true
